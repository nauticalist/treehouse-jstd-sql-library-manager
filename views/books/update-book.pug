extends ../layout

block content
  header  
    h1= title
    div(class="wrapper")
        include includes/errors
        form(action=`/books/${book.id}`, method="post")
            include includes/form
            p 
                input(type="submit", class="btn-primary", value="Update Book")
            p 
                a(class="button btn-secondary", href="/books") Cancel
        form(method='post', action=`/books/${book.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
            p
                input(type='submit', class="btn-danger", value='Delete Book')
